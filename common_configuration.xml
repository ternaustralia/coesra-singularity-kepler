        <maxValue>2147483647</maxValue>
      </numericType>
    </dataType>

    <dataType>
      <name>LONG</name>
      <numberType>natural</numberType>
      <description>64 bit integer without o and negtive integer</description>
      <alias>natural</alias>
      <numericType>
        <minValue>1</minValue>
        <maxValue>9.22337e18</maxValue>
      </numericType>
    </dataType>

    <dataType>
      <name>INTEGER</name>
      <numberType>whole</numberType>
      <description>32 bit integer</description>
      <alias>whole</alias>
      <numericType>
        <minValue>0</minValue>
        <maxValue>2147483647</maxValue>
      </numericType>
    </dataType>

    <dataType>
      <name>LONG</name>
      <numberType>whole</numberType>
      <description>64 bit integer</description>
      <alias>whole</alias>
      <numericType>
        <minValue>0</minValue>
        <maxValue>9.22337e18</maxValue>
      </numericType>
    </dataType>

    <dataType>
      <name>INTEGER</name>
      <numberType>integer</numberType>
      <description>32 bit integer</description>
      <alias>xs:integer</alias>
      <alias>integer</alias>
      <alias>Integer</alias>
      <alias>int</alias>
      <alias>Integers</alias>
      <numericType>
        <minValue>-2147483647</minValue>
        <maxValue>2147483647</maxValue>
      </numericType>
    </dataType>

    <dataType>
      <name>LONG</name>
      <numberType>integer</numberType>
      <description>64 bit integer</description>
      <alias>xs:long</alias>
      <alias>long</alias>
      <alias>Long</alias>
      <numericType>
